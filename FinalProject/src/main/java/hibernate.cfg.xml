<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.password">123</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/fooddelivery</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="hibernate.hbm2ddl.auto">update</property>
        
        <mapping class="com.me.delivery.pojo.User" />
        <mapping class="com.me.delivery.pojo.Customer" />
        <mapping class="com.me.delivery.pojo.Owner" />
        <mapping class="com.me.delivery.pojo.Order" />
		<mapping class="com.me.delivery.pojo.Email" />
		<mapping class="com.me.delivery.pojo.Food" />
		<mapping class="com.me.delivery.pojo.Fooditem" />
		<mapping class="com.me.delivery.pojo.Restaurant" />
		
    </session-factory>
</hibernate-configuration>

