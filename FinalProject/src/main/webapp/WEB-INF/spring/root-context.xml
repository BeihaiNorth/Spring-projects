<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<!-- Root Context: defines shared resources visible to all other web components -->
	
	<bean id="customerDao" class="com.me.delivery.dao.CustomerDAO" ></bean>
	<bean id="customerValidator" class="com.me.delivery.validator.CustomerValidator"></bean>
	
	<bean id="restaurantDao" class="com.me.delivery.dao.RestaurantDAO" ></bean>
	<bean id="restaurantValidator" class="com.me.delivery.validator.RestaurantValidator"></bean>
	
	<bean id="orderDao" class="com.me.delivery.dao.OrderDAO" ></bean>
	<bean id="orderValidator" class="com.me.delivery.validator.OrderValidator"></bean>
		
</beans>
